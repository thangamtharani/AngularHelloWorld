pipeline{
agent any
  tools {nodejs "nodejs"}
  stages{
    stage ('checkout'){
      steps{
        checkout scm
      }
    }
    stage ('install modules'){
      steps{
        sh '''
	  npm install -g @angular/cli@7.3.1;
        '''
      }
    }
    stage ('build') {
      steps{
	      dir("Angular-HelloWorld-master") {
		      sh 'npm install'
		      sh 'ng build --prod'
	      }
      }
    }
  }
  }
