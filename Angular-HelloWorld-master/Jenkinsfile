pipeline{
agent any
  tools {nodejs "nodejs"}
  stages{
    stage ('checkout'){
      steps{
        checkout scm
      }
    }
    stage ('install modules'){
      steps{
        sh '''
	  npm install --verbose -d 
          npm install --save classlist.js
        '''
      }
    }
    stage ('build') {
      steps{
	      dir("Angular-HelloWorld-master") {
		      sh 'ng build --prod --build-optimizer'
	      }
	      
      }
    }
    stage ('build image') {
      steps{
        sh '''
          rm -rf node_modules
          oc start-build angularhelloworld --from-dir=. --follow
        '''
      }
    }
  }
  }
